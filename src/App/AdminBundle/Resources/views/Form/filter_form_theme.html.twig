{% extends '@Admin/Form/theme.html.twig' %}

{% block form %}
    {{ form_start(form, {attr: {id: form.vars.uniqid}}) }}
    <div {{ block('widget_container_attributes') }}>
        {{ form_errors(form) }}

        {% for name, child in form %}
            {% if name != 'submit' %}
                {{- form_row(child) -}}
            {% endif %}
        {% endfor %}

        <div class="ln_solid"></div>

        <div class="form-group">
            <div class="btn-group">
                {% if 'submit' in form %}
                    {{ form_widget(form.submit, {attr: {class: 'submit'}}) }}
                {% else %}
                    <button class="submit btn btn-primary"><i class="fa fa-search"></i> Найти</button>
                {% endif %}
            </div>
            <div class="btn-group pull-right">

            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}