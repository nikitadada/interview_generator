<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title>

    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">

    <link href="{{ asset('markup/vendors/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/nprogress/nprogress.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/pnotify/dist/pnotify.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/pnotify/dist/pnotify.buttons.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/pnotify/dist/pnotify.nonblock.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/select2/dist/css/select2.min.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/bootstrap-daterangepicker/daterangepicker.css') }}" rel="stylesheet">
    <link href="{{ asset('markup/vendors/bootstrap-datepicker/bootstrap-datepicker.standalone.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('markup/plugins/bootstrap-switch-master/dist/css/bootstrap3/bootstrap-switch.min.css') }}"
          rel="stylesheet">

    <link href="{{ asset('markup/build/css/custom.min.css') }}" rel="stylesheet">

    <style type="text/css">
        .text-info {
            color: #008fa1;
        }
    </style>

    {% block css %}{% endblock %}

    <script src="{{ asset('markup/vendors/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('markup/vendors/select2/dist/js/select2.full.min.js') }}"></script>
</head>

<body class="nav-md">
{% block body %}
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    {% block navbar_title %}
                        <div class="navbar nav_title" style="border: 0;">
                            <a href="{{ path('admin_dashboard') }}" class="site_title"><i class="fa fa-paw"></i>
                                <span>Malacut</span></a>
                        </div>
                    {% endblock %}

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_info">
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!-- /menu profile quick info -->

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                {% block menu %}
                                    {{ admin_menu() }}
                                {% endblock %}
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#" class="user-profile dropdown-toggle" data-toggle="dropdown"
                                   aria-expanded="false">
                                    {{ app.user.email|default }}
                                    <span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out pull-right"></i>
                                            Выйти</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="{{ path('admin_dashboard') }}">Перейти на сайт</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->

            <!-- page content -->
            <div class="right_col" role="main">

                {% if breadcrumbs|length %}
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path('admin_dashboard') }}"><i class="fa fa-home"></i></a>
                        </li>

                        {% for item in breadcrumbs %}
                            <li>
                                <a href="{{ item.url }}">
                                    {{ item.title }}
                                </a>
                            </li>
                        {% endfor %}
                    </ol>
                {% endif %}

                <div class="">
                    {% block page_title %}
                        <div class="page-title">
                            <div class="title_left">
                                <h3>{% block heading %}{{ block('title') }}{% endblock %}</h3>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                    {% endblock %}

                    <div id="page-content">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
            <!-- /page content -->

            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    {{ app.request.host }}
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
{% endblock %}

<script src="{{ asset('markup/vendors/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('markup/vendors/fastclick/lib/fastclick.js') }}"></script>
<script src="{{ asset('markup/vendors/nprogress/nprogress.js') }}"></script>
<script src="{{ asset('markup/vendors/pnotify/dist/pnotify.js') }}"></script>
<script src="{{ asset('markup/vendors/pnotify/dist/pnotify.buttons.js') }}"></script>
<script src="{{ asset('markup/vendors/pnotify/dist/pnotify.nonblock.js') }}"></script>
<script src="{{ asset('markup/vendors/moment/min/moment.min.js') }}"></script>
<script src="{{ asset('markup/vendors/bootstrap-daterangepicker/daterangepicker.js') }}"></script>
<script src="{{ asset('markup/plugins/bootstrap-switch-master/dist/js/bootstrap-switch.min.js') }}"></script>
<script src="{{ asset('markup/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js') }}"></script>
<script src="{{ asset('markup/vendors/bootstrap-datepicker/bootstrap-datepicker.ru.min.js') }}"></script>

<script src="{{ asset('markup/build/js/custom.min.js') }}"></script>

<script>
    $(document).ready(function () {
        {% for type, flashes in app.session.flashbag.all() %}
        {% for message in flashes %}
        new PNotify({
            text: '{{ message }}',
            type: '{{ type|replace({error: 'danger'}) }}',
            styling: 'bootstrap3',
            buttons: {
                sticker: false
            }
        });
        {% endfor %}
        {% endfor %}

        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

{% block js %}{% endblock %}

</body>
</html>